
@{
    ViewData["Title"] = "Disenio";
}

<h1>Disenio</h1>
<!-- Bootstrap Tabs -->
<ul class="nav nav-tabs" id="librosTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="arquitectura-tab" data-bs-toggle="tab" data-bs-target="#arquitectura" type="button" role="tab">Arquitectura de Software</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="diseno-tab" data-bs-toggle="tab" data-bs-target="#diseno" type="button" role="tab">Diseño de Software</button>
    </li>
</ul>

<div class="tab-content mt-3" id="librosTabsContent">
    <!-- Pestaña Arquitectura -->
    <div class="tab-pane fade show active" id="arquitectura" role="tabpanel">
        <h3>Libros de Arquitectura de Software</h3>
        <div class="row">
            <div class="col-md-4">
                <img src="~/images/clean-architecture.jpg" class="img-fluid" alt="Clean Architecture" />
                <p><strong>Clean Architecture</strong> - Robert C. Martin</p>
                <p>Principios y patrones para diseñar sistemas robustos y mantenibles.</p>
                <iframe width="100%" height="200" src="https://www.youtube.com/embed/o_TH-Y78tt4" frameborder="0" allowfullscreen></iframe>
            </div>
            <!-- Puedes agregar más libros aquí -->
        </div>
    </div>

    <!-- Pestaña Diseño -->
    <div class="tab-pane fade" id="diseno" role="tabpanel">
        <h3>Libros de Diseño de Software</h3>
        <div class="row">
            <div class="col-md-4">
                <img src="~/images/design-patterns.jpg" class="img-fluid" alt="Design Patterns" />
                <p><strong>Design Patterns</strong> - GoF</p>
                <p>Catálogo de patrones de diseño orientados a objetos ampliamente usados.</p>
                <iframe width="100%" height="200" src="https://www.youtube.com/embed/Nltqi7OdCik" frameborder="0" allowfullscreen></iframe>
            </div>
            <!-- Agrega más libros aquí -->
        </div>
    </div>
</div>
